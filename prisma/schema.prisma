generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid()) @map("_id")
  isAdmin  Boolean   @default(false)
  username String
  email    String    @unique
  password String
  posts    Post[]
  comments Comment[]
  likes    Like[]
  Dislike  Dislike[]
}

model Comment {
  id       String    @id @default(uuid()) @map("_id")
  blog_id  String
  user_id  String
  content  String
  likes    Int       @default(0)
  dislikes Int       @default(0)
  datetime DateTime  @default(now())
  post     Post      @relation(fields: [blog_id], references: [id])
  user     User      @relation(fields: [user_id], references: [id])
  Like     Like[]
  Dislike  Dislike[]
}

model Like {
  id         String  @id @default(uuid()) @map("_id")
  user_id    String
  post_id    String
  comment_id String
  user       User    @relation(fields: [user_id], references: [id])
  post       Post    @relation(fields: [post_id], references: [id])
  comment    Comment @relation(fields: [comment_id], references: [id])
}

model Dislike {
  id         String  @id @default(uuid()) @map("_id")
  user_id    String
  post_id    String
  comment_id String
  user       User    @relation(fields: [user_id], references: [id])
  post       Post    @relation(fields: [post_id], references: [id])
  comment    Comment @relation(fields: [comment_id], references: [id])
}

model Post {
  id       String    @id @default(uuid()) @map("_id")
  user_id  String
  content  String
  heading  String
  datetime DateTime  @default(now())
  comments Comment[]
  user     User      @relation(fields: [user_id], references: [id])
  Like     Like[]
  Dislike  Dislike[]
}
